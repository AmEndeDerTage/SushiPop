    <div class="locales-custom">
        <p>Nuestros Locales</p>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="local-container local1">
                <div class="overlay">
                    <div class="text">
                        <h2>PALERMO</h2>
                        <p>Alto Palermo local 1</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="local-container local2">
                <div class="overlay">
                    <div class="text">
                        <h2>RECOLETA</h2>
                        <p>Callao 986</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="local-container local3">
                <div class="overlay">
                    <div class="text">
                        <h2>BELGRANO</h2>
                        <p>Av. Monroe 2401</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="local-container local4">
                <div class="overlay">
                    <div class="text">
                        <h2>CABALLITO</h2>
                        <p>Av. Acoyte 234</p>
                    </div>
                </div>
            </div>
